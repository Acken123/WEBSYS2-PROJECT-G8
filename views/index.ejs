<body class="index-body">
  <!-- ================= Navigation Bar ================= -->
  <nav class="navbar">
    <div class="brand">
      <a href="/">HoopZone</a>
    </div>
    <ul class="nav-links">
      <li><a href="/">Home</a></li>
      <li><a href="/products">Products</a></li>
      <li><a href="/about">About</a></li>
      <li><a href="/contact">Contact</a></li>
    </ul>
    <div class="nav-actions">
      <a href="/users/login" class="btn secondary">Login</a>
      <a href="/users/register" class="btn primary">Register</a>
    </div>
  </nav>

  <!-- ================= Hero Section ================= -->
  <section class="hero-body">
    <div class="hero-overlay"></div>
    <div class="hero">
      <h1 class="hero-title">Welcome to HoopZone</h1>
      <p class="hero-subtitle">Your one-stop shop for basketball supplies</p>
      <div class="hero-buttons">
        <a href="/products" class="btn primary">Shop Now</a>
        <a href="/about" class="btn secondary">Learn More</a>
      </div>
    </div>
  </section>

  <!-- ================= Featured Products ================= -->
  <section class="featured-products">
    <h2>Featured Products</h2>
    <div class="product-grid">
      <div class="product-card">
        <img src="/images/basketball.jpg" alt="Basketball">
        <h3>Basketball</h3>
        <p>Official size and weight basketball for indoor and outdoor use.</p>
        <p class="price">$29.99</p>
        <button class="btn primary">Add to Cart</button>
      </div>
      <div class="product-card">
        <img src="/images/basketball hoop.jpg" alt="Basketball Hoop">
        <h3>Basketball Hoop</h3>
        <p>Adjustable height hoop with durable backboard for home or practice.</p>
        <p class="price">$149.99</p>
        <button class="btn primary">Add to Cart</button>
      </div>
      <div class="product-card">
        <img src="/images/basketball shoes.jpg" alt="Basketball Shoes">
        <h3>Kobe IX Elite Low EM Protro</h3>
        <p>Kobe IX Elite Low EM Protro</p>
        <p class="price">$89.99</p>
        <button class="btn primary">Add to Cart</button>
      </div>
      <div class="product-card">
        <img src="/images/basketballjersey.jpg" alt="Basketball Jersey">
        <h3>Basketball Jersey</h3>
        <p>Lightweight and breathable jersey for games and practice.</p>
        <p class="price">$39.99</p>
        <button class="btn primary">Add to Cart</button>
      </div>
    </div>
  </section>

  <!-- ================= Footer ================= -->
  <footer>
